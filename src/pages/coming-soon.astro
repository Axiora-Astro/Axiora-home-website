---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
---

<Layout title="Coming Soon - Axiora">
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 dark:from-gray-900 dark:via-blue-900/20 dark:to-purple-900/20">
    <div class="max-w-md mx-auto text-center px-4">
      <div class="mb-8">
        <div class="bg-blue-100 dark:bg-blue-900 p-4 rounded-full inline-block mb-4">
          <Icon name="tabler:clock" class="w-16 h-16 text-blue-600 dark:text-blue-400" />
        </div>
        
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
          Coming Soon
        </h1>
        
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
          We're working hard to bring you the best experience with Axiora. Stay tuned for updates!
        </p>
      </div>

      <div class="space-y-4">
        <a
          href="/#notify-me"
          class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-md transition-colors duration-200 w-full"
        >
          <Icon name="tabler:bell" class="w-5 h-5 mr-2" />
          Notify Me When Ready
        </a>
        
        <a
          href="/"
          class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-gray-700 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:text-white dark:hover:bg-gray-600 rounded-md transition-colors duration-200 w-full"
        >
          <Icon name="tabler:arrow-left" class="w-5 h-5 mr-2" />
          Back to Home
        </a>
      </div>
    </div>
  </div>
</Layout>
