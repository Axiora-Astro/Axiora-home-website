---
import { Icon } from 'astro-icon/components';

const socialLinks = [
  {
    name: 'Facebook',
    href: 'https://www.facebook.com/profile.php?id=61581083394506',
    icon: 'tabler:brand-facebook',
  },
  {
    name: 'LinkedIn',
    href: 'https://www.linkedin.com/company/axiorastro',
    icon: 'tabler:brand-linkedin',
  },
  {
    name: 'Email',
    href: 'mailto:h.m.elnemr@gmail.com',
    icon: 'tabler:mail',
  },
  {
    name: 'WhatsApp',
    href: 'https://wa.me/201501118632/?text=Hello%20I%20am%20interested%20in%20your%20app',
    icon: 'tabler:brand-whatsapp',
  },
];
---

<footer id="footer" class="bg-gray-900 text-white py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center">
      <!-- Logo and Name -->
      <div class="flex items-center mb-8">
        <img src="/Axiora-photos/Axiora-logo.jpg" alt="Axiora Logo" class="w-10 h-10 mr-3 rounded" />
        <span class="text-2xl font-bold">Axiora</span>
      </div>

      <!-- Social Links -->
      <div class="flex space-x-6 mb-8">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 bg-gray-800 rounded-full hover:bg-gray-700 transition-colors duration-200"
            aria-label={link.name}
          >
            <Icon name={link.icon} class="w-6 h-6" />
          </a>
        ))}
      </div>

      <!-- Copyright -->
      <div class="text-center text-gray-400">
        <p>&copy; {new Date().getFullYear()} Axiora. All rights reserved.</p>
      </div>
    </div>
  </div>
</footer>
