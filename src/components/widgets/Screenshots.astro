---
const screenshots = [
  {
    title: 'Login',
    description: 'Secure login system to protect your analysis projects and data.',
    image: '/Axiora-photos/Screenshots/Login.png',
  },
  {
    title: 'Home',
    description: 'Clean and intuitive home interface that gets you started quickly.',
    image: '/Axiora-photos/Screenshots/HomePage1.png',
  },
  {
    title: 'Upload Data',
    description: 'Simple drag-and-drop interface for uploading your Excel and CSV files.',
    image: '/Axiora-photos/Screenshots/DataUpload.png',
  },
  {
    title: 'Dashboard',
    description: 'Interactive dashboard with beautiful visualizations and key insights.',
    image: '/Axiora-photos/Screenshots/Thedashboard.png',
  },
  {
    title: 'Summary',
    description: 'Comprehensive data summary with key metrics and statistical overview.',
    image: '/Axiora-photos/Screenshots/Summary.png',
  },
  {
    title: 'Chat',
    description: 'AI-powered chat assistant to help you understand your data better.',
    image: '/Axiora-photos/Screenshots/Chat.png',
  },
  {
    title: 'Questions',
    description: 'Customize your analysis with specific questions about your data.',
    image: '/Axiora-photos/Screenshots/AddQuestions.png',
  },
  {
    title: 'Recommendations',
    description: 'Get AI-powered recommendations and actionable insights from your data.',
    image: '/Axiora-photos/Screenshots/Recommendations.png',
  },
];
---

<section id="see-axiora" class="py-20 bg-blue-50 dark:bg-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <p class="text-blue-600 dark:text-blue-400 font-semibold text-lg mb-2">Screenshots</p>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        See Axiora in Action
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        Explore the powerful features and intuitive interface of Axiora through these screenshots
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      {screenshots.map((screenshot, index) => (
        <div class="bg-white dark:bg-gray-900 rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
          <div class="relative group cursor-pointer" onclick={`openModal(${index})`}>
            <img
              src={screenshot.image}
              alt={screenshot.title}
              class="w-full h-48 object-cover"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300 flex items-center justify-center">
              <div class="text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
                </svg>
              </div>
            </div>
          </div>
          <div class="p-4 border-t-4 border-blue-500">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 text-center">
              {screenshot.title}
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-300 text-center">
              {screenshot.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Modal -->
  <div id="screenshotModal" class="fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50 hidden">
    <div class="relative max-w-5xl max-h-[90vh] mx-4">
      <!-- Close button -->
      <button
        onclick="closeModal()"
        class="absolute -top-4 -right-4 bg-white dark:bg-gray-800 rounded-full p-2 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors z-10"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <!-- Modal content -->
      <div class="bg-white dark:bg-gray-900 rounded-lg overflow-hidden shadow-2xl">
        <img
          id="modalImage"
          src=""
          alt=""
          class="max-w-full max-h-[70vh] object-contain"
        />
        <div class="p-6 border-t-4 border-blue-500">
          <h3 id="modalTitle" class="text-2xl font-bold text-gray-900 dark:text-white mb-3 text-center">
          </h3>
          <p id="modalDescription" class="text-gray-600 dark:text-gray-300 text-center text-lg">
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  const screenshots = [
    {
      title: 'Login',
      description: 'Secure login system to protect your analysis projects and data.',
      image: '/Axiora-photos/Screenshots/Login.png',
    },
    {
      title: 'Home',
      description: 'Clean and intuitive home interface that gets you started quickly.',
      image: '/Axiora-photos/Screenshots/HomePage1.png',
    },
    {
      title: 'Upload Data',
      description: 'Simple drag-and-drop interface for uploading your Excel and CSV files.',
      image: '/Axiora-photos/Screenshots/DataUpload.png',
    },
    {
      title: 'Dashboard',
      description: 'Interactive dashboard with beautiful visualizations and key insights.',
      image: '/Axiora-photos/Screenshots/Thedashboard.png',
    },
    {
      title: 'Summary',
      description: 'Comprehensive data summary with key metrics and statistical overview.',
      image: '/Axiora-photos/Screenshots/Summary.png',
    },
    {
      title: 'Chat',
      description: 'AI-powered chat assistant to help you understand your data better.',
      image: '/Axiora-photos/Screenshots/Chat.png',
    },
    {
      title: 'Questions',
      description: 'Customize your analysis with specific questions about your data.',
      image: '/Axiora-photos/Screenshots/AddQuestions.png',
    },
    {
      title: 'Recommendations',
      description: 'Get AI-powered recommendations and actionable insights from your data.',
      image: '/Axiora-photos/Screenshots/Recommendations.png',
    },
  ];

  window.openModal = function(index) {
    const modal = document.getElementById('screenshotModal');
    const modalImage = document.getElementById('modalImage');
    const modalTitle = document.getElementById('modalTitle');
    const modalDescription = document.getElementById('modalDescription');

    const screenshot = screenshots[index];

    modalImage.src = screenshot.image;
    modalImage.alt = screenshot.title;
    modalTitle.textContent = screenshot.title;
    modalDescription.textContent = screenshot.description;

    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  };

  window.closeModal = function() {
    const modal = document.getElementById('screenshotModal');
    modal.classList.add('hidden');
    document.body.style.overflow = 'auto';
  };

  // Close modal when clicking outside the image
  document.addEventListener('DOMContentLoaded', function() {
    document.getElementById('screenshotModal').addEventListener('click', function(e) {
      if (e.target === this) {
        window.closeModal();
      }
    });

    // Close modal with Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        window.closeModal();
      }
    });
  });
</script>
